<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/fragmentContainerBackground"
        tools:context="dk.riis.jacob.hangman.MainActivity_akt">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/highscoreText"
            android:textColor="@color/textColor2"
            android:text="PLAYER SCORES!"
            android:textAlignment="center"
            android:textSize="35sp"
            android:background="@color/activityMainBackground"/>

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            tools:listitem="@layout/higscore_element">
        </ListView>
    </LinearLayout>
</FrameLayout>